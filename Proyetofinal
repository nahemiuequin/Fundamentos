void llenar(int a,string DB[], int DA[])
{
	system ("CLS");
	DA[a]=a;
	cout << "Se registro el servicio" << endl;
	system("pause");
	system ("CLS");
}

void mostrar(string DB[], int DA[])
{
	system ("CLS");
	cout << "Producto que pidio" << endl;
	cout << "----------------------------------------" << endl;
	for(int i=0;i<5;i++)
	{
		if(DA[i]<100)
		{
			cout <<DB[i]<<endl;
		}
		
	}
	system("pause");
	system ("CLS");
}

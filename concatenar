{
    int pa=0, pb=0, i=0;
    while ((pa<n) && (pb<m))
    {
        if (A[pa]<B[pb])
        {
            C[i]=A[pa];
            i++;
            pa++;
        }
        else
        {
            C[i]=B[pb];
            i++;
            pb++;
        }
    }
    for (int j=pa;j<n;j++)
    {
        C[i]=A[j];
        i++;
    }
    for (int j=pb;j<m;j++)
    {
        C[i]=B[j];
        i++;
